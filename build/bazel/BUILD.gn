  visibility += [ "//vendor/*" ]
  visibility += [ "//local/*" ]

  visibility += [
    "//boards/vim3:bazel_drivers",
    "//examples/drivers:bazel_test_packages.bazel_build",
    "//examples/drivers/simple/dfv2:bazel_package.bazel_build",
